<script>
    let SchchartName = [{{#each school}}"{{this}}",{{/each}}];
    let SchchartLabel = [{{#each schoolcountStudents}}{{this}},{{/each}}];
    pieChart("SchWise", "Program Wise Student Enrollment", SchchartName, SchchartLabel)
    let DpchartName = [{{#each department}}"{{this}}",{{/each}}];
    let DpchartLabel = [{{#each DeptcountStudents}}{{this}},{{/each}}];
    pieChart("DeptWise", "Program Wise Student Enrollment", DpchartName, DpchartLabel)
    let PchartName = [{{#each program}}"{{this}}",{{/each}}];
    let PchartLabel = [{{#each progcountStudents}}{{this}},{{/each}}];
    pieChart("ProgWise", "Program Wise Student Enrollment", PchartName, PchartLabel)

    function pieChart(ctx,
                      labelName,
                      labelList,
                      dataList,
                      bdcolor = '#094480',
                      bgcolor = [
                          'rgb(255, 99, 132)',
                          'rgb(54, 162, 235)',
                          'rgb(255, 205, 86)',
                          'rgb(47, 225, 64)'
                      ]) {
        Chart.defaults.global.defaultFontColor = "black";
        let chart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labelList,
                datasets: [{
                    label: labelName,
                    backgroundColor: bgcolor,
                    borderColor: bdcolor,
                    data: dataList,
                    borderWidth: [1, 1, 1, 1, 1],
                    hoverOffset: 10,
                }],

            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    position: "top",
                    text: "Student Enrollment",
                    fontSize: 14,
                    fontColor: "#111"
                },
                legend: {
                    display: true,
                    position: "bottom",
                    labels: {
                        fontColor: "#333",
                        fontSize: 12
                    }
                }
            }
        })

    }
</script>
