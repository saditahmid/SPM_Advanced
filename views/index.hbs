    <style>
        body, html {
            height: 100%;
          padding-top:  0;
            font-family: Poppins;
        }



        .bg-image {
            /* The image used */
            /*/background: -webkit-linear-gradient(rgba(186, 232, 158, 0.8), rgba(210, 119, 115, 0.8), rgba(96, 118, 198, 0.8)), url("https://bit.ly/2rlzaXi");*/

            /*object-fit: cover;*/
            opacity: 1;
            /* Add the blur effect */

            filter: blur(5px);
            -webkit-filter: blur(5px);
            -webkit-backdrop-filter: blur(5px); /* apply the blur */
            backdrop-filter: none;
            /*transform: scale(1.1);*/

            /* Full height */
            height: 100%;

            /* Center and scale the image nicely */
            background: black url("/graphs5.jpg") no-repeat center;
            background-size: cover;
        }

        /* Position text in the middle of the page/image */
        .bg-text {
            /*background-color: rgb(201, 12, 12); !* Fallback color *!*/
            /*background-color: rgba(0, 0, 0, 0.4); !* Black w/opacity/see-through *!*/
            color: #d0dec9;
            font-weight:bolder;
            border: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 2;
            width: 60%;
            padding: 80px;
            text-align: center;
            opacity: 1;
        }
        .tab {
             height: 60px;
            overflow: hidden;
            border: none;
            background-color: #0b223b;
        }

        /* Style the buttons inside the tab */
        .tab button {
            background-color: inherit;
            float: right;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
            color: white;
        }

        /* Change background color of buttons on hover */
        .tab button:hover {
            background-color: #ddd;
            color:#0b223b;
        }

        /* Create an active/current tablink class */
        .tab button.active {
            background-color: #0b223b;
        }

        /* Style the tab content */
        .tabcontent {
            display: none;
            padding: 6px 12px;
            border: 1px solid #ccc;
            border-top: none;
        }
    </style>
