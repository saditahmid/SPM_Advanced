            backgroundColor: '#222955'
        },

        {
            label: 'CSE464',
            data: [{{#each CSE464PLO}}{{this}},{{/each}}],
            backgroundColor: '#8C0662'
        },
    ];
    stackedChart("FacultyProgressView", plo2, datasetlist, true);


    function stackedChart(ctx, labelName, datasetlist, isTrue) {

        let chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labelName, // responsible for how many bars are gonna show on the chart
                // create 12 datasets, since we have 12 items
                // data[0] = labels[0] (data for first bar - 'Standing costs') | data[1] = labels[1] (data for second bar - 'Running costs')
                // put 0, if there is no data for the particular bar
                datasets: datasetlist
            },
            options: {
                responsive: false,
                legend: {
                    position: 'right' // place legend on the right side of chart
                },
                scales: {
                    xAxes: [{
                        stacked: isTrue // this should be set to make the bars stacked
                    }],
                    yAxes: [{
                        stacked: isTrue // this also..
                    }]
                }
            }
        });
    }



    // let PchartName= ["Summer", "Autumn", "Spring",];
    // let PchartLabel = [3.4,3.35,3.2];
    // barChart("ProgramWiseGPA","SemestermWise Student GPA", PchartName ,PchartLabel)
    let SchartName = ["Summer", "Autumn", "Spring",];
    let SchartLabel = [3.4, 3.35, 3.2];
    barChart("ProgramWiseCGPA", "Semester-Wise Student CGPA", SchartName, SchartLabel)

    let semester = [{{#each semYear}}"{{this}}",{{/each}}];
    let semesterAttempted = [{{#each GPA}}{{this}},{{/each}}];
    chartObjects = [{
        label: 'GPA',
        backgroundColor: '#FEE9F3',
        borderColor: '#962323',
        data: semesterAttempted
    }];
    lineChartObject("DepartmentProgressView", semester, chartObjects);

    function lineChartObject(ctx,
                             labelList,
                             chartObjects) {
        Chart.defaults.global.defaultFontFamily = "Oxygen";
        Chart.defaults.global.defaultFontColor = "black";

        let chart = new Chart(ctx, {
            // The type of chart we want to create
            type: 'line',

            // The data for our dataset
            data: {
                labels: labelList,
                datasets: chartObjects
            },

            // Configuration options go here
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    }

    function barChart(ctx,
                      labelName,
                      labelList,
                      dataList,
                      bdcolor = '#094480',
                      bgcolor = '#d9e2ec') {
        //Chart.defaults.global.defaultFontFamily = "Oxygen";
        Chart.defaults.global.defaultFontColor = "black";

        let chart = new Chart(ctx, {
            // The type of chart we want to create
            type: 'bar',

            // The data for our dataset
            data: {
                labels: labelList,
                datasets: [{
                    label: labelName,
                    backgroundColor: bgcolor,
                    borderColor: bdcolor,
                    data: dataList
                }]
            },

            // Configuration options go here
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    }

